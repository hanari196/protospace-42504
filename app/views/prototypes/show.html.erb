<main class="main">
  <div class="inner">
    <div class="prototype__wrapper">
      <p class="prototype__hedding">
        <%= @prototype.title %>
      </p>

      <%= link_to "by #{@prototype.user.name}", root_path(@prototype.user), class: :prototype__user %>
      
      <%# 投稿者 = ログイン中のユーザーなら以下を表示 %>
      <% if user_signed_in? && current_user == @prototype.user %>
        <div class="prototype__manage">
          <%= link_to "編集する", edit_prototype_path(@prototype), class: :prototype__btn %>
          <%= button_to "削除する", prototype_path(@prototype), method: :delete, data: {confirm: "本当に削除しますか？", turbo: false }, class: :prototype__btn %>
        </div>
      <% end %>
      <%# ｺｺﾏﾃﾞ %>
      
      <div class="prototype__image">
        <% if @prototype.image.attached? %>
        <%= image_tag @prototype.image %>
        <% else %>
        <%= image_tag "no_image.jpg" %> <!-- 代替画像 -->
        <% end %>
      </div>
            
      <div class="prototype__body">
        <div class="prototype__detail">
          <p class="detail__title">キャッチコピー</p>
          <p class="detail__message">
            <%= @prototype.catch_copy %>
          </p>
        </div>
        <div class="prototype__detail">
          <p class="detail__title">コンセプト</p>
          <p class="detail__message">
            <%= @prototype.concept %>
          </p>
        </div>
      </div>

      <div class="prototype__comments">
        <%# ログインしているユーザーには以下のコメント投稿フォームを表示する %>

        <% if user_signed_in? %>
          <%= form_with model: [@prototype, @comment],local: true do |f| %>
            <div class="field">
              <%= f.label :text, "コメント" %><br/>
              <%= f.text_field :text, id:"comment_content" %>
            </div>
            <div class="actions">
              <%= f.submit "送信する", class: :form__btn  %>
            </div>
          <% end %>
        <% else %>
          <strong><p>※※※ コメントの投稿には新規登録/ログインが必要です ※※※</p></strong>
        <% end %>
      
        <ul class="comments_lists">
         <%# 投稿に紐づくｺﾒﾝﾄ一覧表示 %>
          <% @comments.each do |comment|%>
            <li class = "comments_list">
              <%= comment.text %>
              <strong>
                <%= link_to comment.user.name, user_path(comment.user), class: :comment_user %>
              </strong>
            </li>
          <% end %>
          <%# // 投稿に紐づくコメントを一覧する処理を記述する %>
        </ul>
      </div>

    </div>
  </div>
</main>
