<%= form_with model: @prototype, local: true, html: { multipart: true } do |f| %>
  <% if @prototype.errors.any? %>
    <div id="error_explanation">
      <ul>
        <% @prototype.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= f.label :title, "タイトル" %><br>
    <%= f.text_field :title %>
  </div>

  <div>
    <%= f.label :catch_copy, "キャッチコピー" %><br>
    <%= f.text_field :catch_copy %>
  </div>

  <div>
    <%= f.label :text, "コンセプト" %><br>
    <%= f.text_area :concept %>
  </div>

  <!-- ここが画像アップロードの場所 -->
  <div>
    <%= f.label :image, "画像を選択" %><br>
    <%= f.file_field :image %>
  </div>

  <div>
    <%= f.submit "投稿する" %>
  </div>
<% end %>